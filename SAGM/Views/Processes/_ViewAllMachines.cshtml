@model SAGM.Data.Entities.Process
<table class="table table-hover table-responsive compact" style="font-size:small;" id="MachinesTable">

    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th style="text-align:center;">&nbsp;&emsp;#</th>
            <th>
                @Html.DisplayNameFor(model => model.Machines.FirstOrDefault().MachineName)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
              Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.Machines)
        {
            <tr>
                <td></td>
                <td>
                    <a asp-action="DetailMachine" asp-controller="Processes" asp-route-Id="@item.MachineId">@Html.DisplayFor(modelItem => item.MachineName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("EditMachine", "Processes", new { id = item.MachineId }, Context.Request.Scheme)' , 'Actualizar Máquina')" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil-alt"></i> </a>
                    <button data-id="@item.MachineId" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>