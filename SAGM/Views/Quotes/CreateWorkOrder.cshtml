@model SAGM.Data.Entities.Quote
@{
    Layout = null;
}



<style>
    .g1 {
        background-color: #F9F9F9;
        margin: 10px 10px 10px 10px;
        border: 2px solid orange;
        border-radius: 12px;
        box-shadow: 5px 5px 5px #555;
        background-color: whitesmoke;
        padding: 1px 2px 2px 1px;
    }
</style>

<div tabindex="-1" data-bs-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <form asp-action="CreateWorkOrder" method="post">

    <div class="modal-body">
        <p>¿Estás seguro que deseas crear una Orden de trabajo para la Cotización @Model.QuoteName ?</p>
    </div>
    <div class="modal-footer">
        <div class="col text-center">

                <input type="hidden" asp-for="QuoteId" />
                
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" arial-label="cerrar" id="btnCancel"><i class="fa fa-ban"></i> No</button>
                <button type="submit" value="Si" class="btn btn-success"><i class="fa fa-check-circle"></i> Sí</button>
          
        </div>

    </div>
    </form>

</div>




