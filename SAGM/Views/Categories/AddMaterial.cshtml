@model SAGM.Models.MaterialViewModel

@{
    ViewData["Title"] = "Crear";
}


<h4>Agregar material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMaterial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaterialTypeId" />
            <div class="form-group">
                <label asp-for="MaterialName" class="control-label"></label>
                <input asp-for="MaterialName" class="form-control" id="materialName" />
                <span asp-validation-for="MaterialName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input type="checkbox" asp-for="Active" id="Active" checked="checked" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="DetailsMaterialType" asp-route-id="@Model.MaterialTypeId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        //script para tener el foco sobre el campo inicial
        $(document).ready(function () {
            $("#materialName").focus();
        })
    </script>
}
