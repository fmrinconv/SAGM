@model SAGM.Data.Entities.Customer
<table class="table table-hover table-responsive compact" id="TableContacts" style="font-size:x-small;">
    <thead>
        <tr>
            <th style="text-align:center;">&nbsp;&emsp;#</th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts.FirstOrDefault().FullName))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts.FirstOrDefault().Email)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Contacts.FirstOrDefault().PhoneNumber)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Contacts.FirstOrDefault().Mobile)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Contacts.FirstOrDefault().ImageFullPath)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Contacts.FirstOrDefault().Active)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    <img src="@item.ImageFullPath" style="width:50px; height:50px; border-radius:25px;" class="zoom" />
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Active, new { @id = "chkDeleted", @disabled = "true", @title="notitle"})
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEditContact",
                                                         "Customers", 
                                                         new {id= item.Customer.CustomerId, contactId=item.ContactId}, 
                                                         Context.Request.Scheme)',
                                            'Editar contacto',
                                             'bg-warning')" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-pencil-alt"></i></a>
                    <button data-id="@item.ContactId" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>