@model SAGM.Data.Entities.Country
<table class="table table-hover table-responsive compact" style="font-size:small;" id="StatesTable">

    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th style="text-align:center;">&nbsp;&emsp;#</th>
            <th>
                @Html.DisplayNameFor(model => model.States.FirstOrDefault().StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.States.FirstOrDefault().CitiesNumber)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
              Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.States)
        {
            <tr>
                <td></td>
                <td>
                    <a asp-action="DetailsState" asp-controller="Countries" asp-route-Id="@item.StateId">@Html.DisplayFor(modelItem => item.StateName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CitiesNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("EditState", "Countries", new { id = item.StateId }, Context.Request.Scheme)' , 'Actualizar Estado')" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil-alt"></i> </a>
                    <button data-id="@item.StateId" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>