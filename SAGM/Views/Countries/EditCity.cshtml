@model SAGM.Models.CityViewModel

@{
    ViewData["Title"] = "Editar Ciudad";
    Layout = null;
}
<div class="container smfont">
    <form asp-action="EditCity" autocomplete="off" asp-route-id="@Model.CityId" onsubmit="return jQueryAjaxPost(this);">
        <input type="hidden" asp-for="StateId" />
        <input type="hidden" asp-for="CityId" />
        <div class="box-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="required">*</span>
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" id="cityName" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input type="checkbox" asp-for="Active" id="Active" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col text-center">
                <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        //script para tener el foco sobre el campo inicial
        $(document).ready(function () {
            $("#cityname").focus();
            var tmpStr = $("#cityname").val();
            $("#cityname").val('');
            $("#cityname").val(tmpStr);
        })
    </script>
}
