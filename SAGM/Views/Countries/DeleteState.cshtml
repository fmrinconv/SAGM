@model SAGM.Data.Entities.State

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que deseas eliminar?</h3>
<div>
    <h4>Estado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CitiesNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CitiesNumber)
        </dd>
    </dl>

    <form asp-action="DeleteState">
        <input type="hidden" asp-for="StateId" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model.Country.CountryId"  class="btn btn-outline-success" id="btnRegresar">Regresar</a>
    </form>
</div>

@section Scripts {
    <script>
        //script para tener el foco sobre el campo inicial
        $(document).ready(function () {
            $("#btnRegresar").focus();
        })
    </script>
}
