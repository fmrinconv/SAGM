@model IEnumerable<SAGM.Data.Entities.Country>


<table class="table table-hover table-responsive compact row-border" id="TableCountries" style="font-size:small;">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th style="text-align:center;">&nbsp;&emsp;#</th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatesNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CitiesNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
               Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    <a asp-action="Details" asp-controller="Countries" asp-route-Id="@item.CountryId">@Html.DisplayFor(modelItem => item.CountryName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatesNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CitiesNumber)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Active, new { @id = "chkDeleted", @disabled = "true", @title="notitle"})
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Countries", new { id = item.CountryId }, Context.Request.Scheme)' , 'Actualizar País')" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil-alt"></i> </a>
                    <button data-id="@item.CountryId" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog" title="Eliminar"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
